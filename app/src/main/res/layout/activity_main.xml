<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="18dp"
        android:onClick="pub"
        android:text="Publish"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/Pick"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="265dp"
        android:onClick="pub"
        android:text="Grip On"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="264dp"
        android:onClick="pub"
        android:text="Grip Off"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="597dp"
        android:text="IOT Course Project"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="564dp"
        android:text="MQTT Connection"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    </LinearLayout>

    <EditText
        android:id="@+id/send"
        android:layout_width="354dp"
        android:layout_height="79dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:hint="Joint Angles"

        android:paddingStart="15dp"
        android:paddingEnd="15dp"></EditText>

    <TextView
        android:id="@+id/Bin"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="538dp"
        android:textSize="20dp"
        android:text="Select Bin" />

    <TextView
        android:id="@+id/Box"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="428dp"
        android:text="Select Box"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/Binspin"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="485dp"
        android:background="@drawable/spinner_border" />

    <Spinner
        android:id="@+id/Boxspin"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="367dp"
        android:background="@drawable/spinner_border" />
</RelativeLayout>